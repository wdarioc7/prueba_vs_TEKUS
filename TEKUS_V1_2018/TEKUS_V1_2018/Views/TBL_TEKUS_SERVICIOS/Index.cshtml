            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TBL_TEKUS_CLIENTES.NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TBL_TEKUS_PAIS.NOMBRE)
            </td>
