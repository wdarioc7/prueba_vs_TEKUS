}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>CANTIDAD DE SERVICIOS: @ViewBag.Servicios</p>
<p>
   

        @Html.ListBox("ListaTareas", new SelectList(ViewBag.paises), htmlAttributes: new { @style = "width:280px;height :90px" })

   
</p>
<table class="table">
    <tr>
        <th>
